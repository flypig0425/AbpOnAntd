@typeparam TEntity
@typeparam TResourceType

<FormItem Label="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)">
    <Select TItem="TEntity" TItemValue="int" @bind-SelectedValue="@SelectedValue">
        <SelectOptions>
            @foreach (var item in SelectItems)
            {
                <SelectOption TItem="TEntity" TItemValue="int" Value="@item.Value">
                    @item.Text
                </SelectOption>
            }
        </SelectOptions>
    </Select>
</FormItem>
