@namespace Zero.Abp.AntBlazorUI.Components
@using Zero.Abp.AspNetCore.Components.Web
@inject IAbpUtilsService AbpUtilsService

@if (_fullscreen)
{
    <Icon Type="fullscreen-exit"
      Theme="outline"
      OnClick="ExitFullscreenAsync" />
}
else
{
    <Icon Type="fullscreen"
      Theme="outline"
      OnClick="FullscreenAsync" />
}

@code {
    private bool _fullscreen;

    private async Task FullscreenAsync()
    {
        _fullscreen = true;
        await AbpUtilsService.RequestFullscreenAsync();

    }

    private async Task ExitFullscreenAsync()
    {
        _fullscreen = false;
        await AbpUtilsService.ExitFullscreenAsync();
    }
}
