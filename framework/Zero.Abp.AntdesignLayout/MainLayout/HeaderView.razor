@namespace Zero.Abp.AntdesignLayout
@inherits AntProComponentBase

@if (_needFixedHeader)
{
    <Header Style="@_fixedHeaderStyle"></Header>
}
<Header Class="@ClassMapper.Class" Style="@_headerStyle">
    @if (_isTop && !IsMobile)
    {
        <TopNavHeader Mode="MenuMode.Horizontal"  />
    }
    else
    {
        <GlobalHeader>
            @HeaderContentRender
        </GlobalHeader>
    }
</Header>