@namespace Zero.Abp.AntdesignUI.Layout
@inherits SettingDrawerBase

<AntList Split="false"
         DataSource="SettingItems"
         ItemLayout="ListItemLayout.Horizontal">
    <ListItem>
        <span style="opacity: @(context.Disabled ? "0.5" : "1")">@context.Title</span>
        @context.Action
    </ListItem>
</AntList>

@code
{
    public SettingItem[] SettingItems { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        SettingItems = new[] {
                new SettingItem
            {
                Title=L["HeaderTheme"],
                Action = @<SimpleSelect Size="@("small")"
                                        Style="width: 80px;"
                                        DefaultValue="@Settings.HeaderTheme"
                                        @bind-Value="Settings.HeaderTheme">
    <SelectOptions>
        <SimpleSelectOption Value="@("light")" Label="@L["Light"]" />
        <SimpleSelectOption Value="@("dark")" Label="@L["Dark"]" />
    </SelectOptions>
</SimpleSelect>
            },
                new SettingItem
            {
                Title=L["SidebarTheme"],
                Action = @<SimpleSelect Size="@("small")"
                                        Style="width: 80px;"
                                        DefaultValue="@Settings.NavTheme"
                                        @bind-Value="Settings.NavTheme">
    <SelectOptions>
        <SimpleSelectOption Value="@("light")" Label="@L["Light"]" />
        <SimpleSelectOption Value="@("dark")" Label="@L["Dark"]" />
    </SelectOptions>
</SimpleSelect>
            },
            new SettingItem
            {
                Title=L["ContentWidth"],
                Action = @<SimpleSelect Size="@("small")"
                                        Style="width: 80px;"
                                        DefaultValue="@Settings.ContentWidth"
                                        @bind-Value="Settings.ContentWidth">
    <SelectOptions>
        <SimpleSelectOption Value="@("Fixed")" Label="@L["Fixed"]" />
        <SimpleSelectOption Value="@("Fluid")" Label="@L["Fluid"]" />
    </SelectOptions>
</SimpleSelect>
            },
            new SettingItem
            {
                Title=L["FixedHeader"],
                Action = @<Switch Size="small" @bind-Checked="Settings.FixedHeader" />
            },
            new SettingItem
            {
                Title=L["FixedSidebar"],
                Action = @<Switch Size="small" @bind-Checked="Settings.FixSiderbar" />
            },
            new SettingItem
            {
                Title=L["SplitMenus"],
                Action = @<Switch Size="small" @bind-Checked="Settings.SplitMenus" />
            },
        };
        }
}