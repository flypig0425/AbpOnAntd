@namespace Zero.Abp.AntdesignUI.Layout
@inherits AntDomComponentBase

<div class="theme-color">
    <h3 class="theme-color-title">@Title</h3>
    <div class="theme-color-content">
        @foreach (var item in ThemeColors)
        {
            <div class="theme-color-block" style="background-color: @item.Value"
                 @onclick="@(async x=> await HandleClickAsync(item.Key))">
                @if (Value == item.Key)
                {
                    <Icon Type="check" Theme="outline" />
                }
            </div>
        }
    </div>
</div>