@namespace Zero.Abp.AntdesignUI.Layout
@inherits SettingDrawerBase

<AntList Split="false"
         DataSource="SettingItems"
         ItemLayout="ListItemLayout.Horizontal">
    <ListItem>
        <span style="opacity: @(context.Disabled ? "0.5" : "1")">@context.Title</span>
        @context.Action
    </ListItem>
</AntList>

@code
{

    public SettingItem[] SettingItems { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        SettingItems = new[] {
            new SettingItem
            {
                Title = L["Header"],
                Action = @<Switch Size="small" @bind-Value="Settings.HeaderRender" />
            },
            new SettingItem
            {
                Title =  L["Footer"],
                Action = @<Switch Size="small" @bind-Value="Settings.FooterRender" />
            },
            new SettingItem
            {
                Title =  L["Menu"],
                Action = @<Switch Size="small" @bind-Value="Settings.MenuRender" />
            },
            new SettingItem
            {
                Title =  L["MenuHeader"],
                Action = @<Switch Size="small" @bind-Value="Settings.MenuHeaderRender" />
            },
        };
        }
}