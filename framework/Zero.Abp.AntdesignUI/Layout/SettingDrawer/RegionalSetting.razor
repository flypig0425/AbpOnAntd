@namespace Zero.Abp.AntdesignUI.Layout
@inherits SettingDrawerBase

<AntList Split="false"
         DataSource="SettingItems"
         ItemLayout="ListItemLayout.Horizontal">
    <ListItem>
        <span style="opacity: @(context.Disabled ? "0.5" : "1")">@context.Title</span>
        @context.Action
    </ListItem>
</AntList>

@code
{

    RenderFragment SwitchRender(Func<bool> value, Action<bool> callback) =>@<Template>
        <Switch Size="small" Checked="@value.Invoke()" OnChange="v=>callback?.Invoke(v)" />
    </Template>
    ;


    public SettingItem[] SettingItems { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        SettingItems = new[] {
            new SettingItem
            {
                Title = L["Header"],
                Action =SwitchRender(()=>Settings.HeaderRender,(value)=>Settings.HeaderRender=value)
            },
            new SettingItem
            {
                Title =  L["Footer"],
                Action =SwitchRender(()=>Settings.FooterRender,(value)=>Settings.FooterRender=value)
            },
            new SettingItem
            {
                Title =  L["Menu"],
                Action =SwitchRender(()=>Settings.MenuRender,(value)=>Settings.MenuRender=value)
            },
            new SettingItem
            {
                Title =  L["MenuHeader"],
                Action =SwitchRender(()=>Settings.MenuHeaderRender,(value)=>Settings.MenuHeaderRender=value)
            },
        };
    }
}