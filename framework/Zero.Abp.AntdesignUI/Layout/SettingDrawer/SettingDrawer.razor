@namespace Zero.Abp.AntdesignUI.Layout
@inherits SettingDrawerBase

<Drawer OnClose="()=>_show=false"
        Visible="_show"
        Width="300"
        Placement="right"
        Style="z-index: 999;">
    <Handler>
        <div class="@BaseClassName-drawer-handle" @onclick="SetShow">
            <Icon Type=@(_show?"close":"setting") Theme="outline" Style="color: #fff; font-size: 20px;" />
        </div>
    </Handler>
    <ChildContent>
        <div class="@BaseClassName-drawer-content">

            @*<SettingDrawerBody Title="@L["PageStyleSetting"]"
                           PrefixCls="@BaseClassName">
            <BlockCheckbox PrefixCls="@BaseClassName"
                           List="ThemeList"
                           @bind-Value="@Settings.NavTheme"
                           OnChange="@(async x => await UpdateTheme())" />
        </SettingDrawerBody>*@

            <ThemeColor Title="@L["ThemeColor"]"
                        Colors="LightColorList"
                        @bind-Value="@Settings.PrimaryColor"
                        OnChange="@(async _=>await UpdateTheme())" />
            <Divider />
            @*OnChange="@(x => SetThemeList())"*@
            <SettingDrawerBody Title="@L["NavigationMode"]"
                               PrefixCls="@BaseClassName">
                <BlockCheckbox PrefixCls="@BaseClassName"
                               List="LayoutList"
                               @bind-Value="@Settings.Layout" />
            </SettingDrawerBody>

            <LayoutSetting />

            <Divider />

            <SettingDrawerBody Title="@L["RegionalSettings"]"
                               PrefixCls="@BaseClassName">
                <RegionalSetting />
            </SettingDrawerBody>

            <Divider />

            <SettingDrawerBody Title="@L["OtherSettings"]"
                               PrefixCls="@BaseClassName">
                <OtherSetting />
            </SettingDrawerBody>

            @if (!HideHintAlert && !HideCopyButton)
            {
                <Divider />
            }

            @if (!HideHintAlert)
            {
                <Alert Type="warning"
                       Message="@L["SettingDrawer:HintAlertMessage"]"
                       Icon="_notification"
                       ShowIcon="true"
                       Style="margin-bottom: 16px;" />
            }

            @if (!HideCopyButton)
            {
                <Button Block OnClick="CopySetting">
                    <Icon Type="copy" Theme="outline" /> @L["CopySetting"]
                </Button>
            }
        </div>
    </ChildContent>
</Drawer>
<link type="text/css" rel="stylesheet" id="theme-style" href="@_url" @ref="_linkRef">
@code
{
    private RenderFragment _notification =@<Icon Type="notification" />;
}