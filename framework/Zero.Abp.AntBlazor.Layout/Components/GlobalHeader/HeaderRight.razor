@namespace Zero.Abp.AntBlazor.Layout
@inherits AntLayoutComponentBase

@if (!ItemRenders.IsNullOrEmpty())
{
    <Space Class="@ClassNames(Class,"right")" Size="@("18")">
        @foreach (var render in ItemRenders)
        {
            <SpaceItem Style="cursor:pointer">
                @render
            </SpaceItem>
        }
        <SpaceItem />
    </Space>
}
@code {
    [Parameter] public List<RenderFragment> ItemRenders { get; set; } = new List<RenderFragment>();
}
